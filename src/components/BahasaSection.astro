<section id="teknologi" class="bg-[#F8F8F8] py-16 mb-12">
    <div class="container mx-auto">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-800">Teknologi</h2>
            <p class="text-gray-600">Teknologi yang saya kuasai</p>
        </div>

        <div class="w-full px-4">
            <div class="flex flex-wrap items-center justify-center">
                {
                    [
                        { src: "/img/Node.svg", alt: "Nuxt" },
                        { src: "/img/bun.svg", alt: "Vue" },
                        { src: "/img/js.svg", alt: "JavaScript" },
                        {
                            src: "/img/typescript.svg",
                            alt: "TypeScript",
                        },
                        { src: "/img/postgres.svg", alt: "Flutter" },
                        { src: "/img/express.svg", alt: "Dart" },
                    ].map((tech) => (
                        <a
                            href="#"
                            class="mx-4 max-w-[120px] py-4 opacity-60 grayscale transition duration-500 hover:opacity-100 hover:grayscale-0 lg:mx-6 xl:mx-8"
                        >
                            <img src={tech.src} alt={tech.alt} />
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
</section>
